<div data-show="edit">
    <a data-id="{{id}}" href="#" class="personal-box-actions-edit-close">X</a>
    <form id="personal-box-admin-form" data-id="{{id}}">
        <div class="form-group">
            <label>Box title</label>
            <input type="text" class="form-control" name="title" value="{{ _settings.title }}" />
        </div>
        <div role="tabpanel">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Query</a></li>
                <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Collection</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">
                    <div class="form-group">
                        <label>Search query</label>
                        <input type="text" class="form-control" name="query" value="{{ _settings.query }}" />
                    </div>
                <div>
                <div role="tabpanel" class="tab-pane" id="profile">
                    <div class="form-group">
                        <label>Collection Name</label>
                        <input type="text" class="form-control" name="collection" value="{{ _settings.collection}}" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="type" value="record_list" />
            </div>
        </div>
        <a href="#" data-id="{{id}}" class="btn btn-success btn-block personal-box-actions-edit-save">Save</a>
    </div>
</div>
